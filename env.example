# ============================================
# bibbly Backend Environment Configuration
# ============================================

# Server Configuration
NODE_ENV=development
PORT=5001
API_VERSION=v1

# MongoDB Configuration
# Local development
MONGODB_URI=mongodb://localhost:27017/bibbly_dating
# Docker development (use container name)
# MONGODB_URI=mongodb://mongodb:27017/bibbly_dating
# Production (MongoDB Atlas)
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/bibbly_dating

# Redis Configuration (optional - for caching/sessions)
REDIS_URL=redis://localhost:6379
# Docker: REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# OneSignal Configuration
ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_API_KEY=your_onesignal_api_key

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
EMAIL_FROM=bibbly Dating <noreply@bibbly.app>

# App Configuration
APP_NAME=bibbly
APP_URL=https://bibbly.app
APP_DEEP_LINK=bibbly://
# Landing website URL (where email verification links point to)
FRONTEND_URL=http://localhost:3000
# For production, set to: https://bibbly.app or your landing website domain

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=5242880
MAX_PHOTOS=4

# Message Request Settings
MESSAGE_REQUEST_EXPIRY_DAYS=7
DAILY_DISCOVERY_LIMIT=50
DAILY_MESSAGE_REQUEST_LIMIT=10

# Premium Settings
FREE_DAILY_REQUESTS=5
PREMIUM_DAILY_REQUESTS=50
FREE_DAILY_REVEALS=1
PREMIUM_DAILY_REVEALS=10

# Security
BCRYPT_SALT_ROUNDS=12

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

